<% layout("/layouts/boilerplate") %>
<body>
    <h2 class="mb-3 pt-4">Listings</h2>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(result of allresult){%>
        <div class="card col" style="width: 27.5rem;">
            <a href="/listing/<%=result._id%>" class="listing-link">
            <img src="<%=result.image%>" class="card-img-top" alt="listing image" style="height: 18rem;">
            <div class="card-img-overlay">
              </div>
            <div class="card-body">
              <p class="card-text"><b><%=result.title%></b></p>
              <p class="card-text">&#8377;<%=result.price.toLocaleString("en-IN")%>/night</p>
            </a>
            </div>
          </div>
          <% } %>
    </div>
</body>
