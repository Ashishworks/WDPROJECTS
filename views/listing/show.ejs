<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <h2 class="col-6 offset-3 pt-4">Listing Details</h2>
            <div class="col-6 offset-3 p-0">
                <div class="card">
                    <img src="<%=singledata.image%>" class="show-card">
                </div>
            </div>
        </div>
            <div class="row">
                <div class="card-body col-6 offset-3">
                    <b>
                        <p class="card-text mb-1" style="font-size: larger;">
                            <%=singledata.title%>
                        </p>
                    </b>
                    <p class="mb-1 col-8">
                        <%=singledata.description%>
                    </p>
                    <p class="mb-0">&#8377;<%=singledata.price.toLocaleString("en-IN")%></p>
                    <p class="mb-0">
                        <%=singledata.location%>
                    </p>
                    <p>
                        <%=singledata.country%>
                    </p>
                </div>
            </div>
        <div class="row">
            <div class="col-1 offset-3 p-0">
                <a href="/listing/<%=singledata._id%>/edit" class="btn btn-outline-success">EDIT</a>
            </div>
            <div class="col-2 p-0">
                <form method="post" action="/listing/<%=singledata._id%>?_method=DELETE">
                    <button class="btn btn-outline-danger">DELETE</button>
            </div>
            </form>
            <br>
            <br>
    </body>